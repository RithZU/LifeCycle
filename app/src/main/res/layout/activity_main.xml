<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sk_rith.lab3.MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <RadioButton
            android:id="@+id/haruno_radio_button"
            android:text="Haruno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:onClick="actorChange"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/hatake_radio_button"
            android:layout_alignParentLeft="true"

            android:text="Hatake"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:onClick="actorChange"
            />
        <RadioButton
            android:id="@+id/rocklee_radio_button"
            android:text="Rock Lee"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:onClick="actorChange"
            />
        <RadioButton
            android:id="@+id/uchiha_radio_button"
            android:text="Uchiha"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:onClick="actorChange"
            />

    </RadioGroup>
    <ImageView
        android:id="@+id/actor_image"
        android:layout_width="wrap_content"
        android:layout_height="400dip"
        android:padding="30dp"
        android:src="@drawable/haruno"
        />
    <CheckBox

        android:id="@+id/check_box_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you know the shown character?"

        android:layout_alignBottom="@+id/actor_image"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/check_box_id"
        android:orientation="horizontal"
        >


        <EditText
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:text="Haruno"

            />
        <Button
            android:id="@+id/send_id"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"

            />

    </LinearLayout>




</RelativeLayout>
